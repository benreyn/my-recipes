<div class="row">
  <div class="col-md-2">
    <h2>Write a review: </h2>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= form_for([@recipe, review = @recipe.reviews.build]) do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    <div class="col-md-4">
      <%= f.submit "Submit Review", class:"btn btn-small btn-success" %>
    </div>
    <% end %>
  
  </div>
</div>