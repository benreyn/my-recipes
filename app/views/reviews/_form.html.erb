<h2>Write a review: </h2>
<div class="row">
  <div class="col-md-6">
    <%= form_for([@recipe, @recipe.reviews.build]) do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>
    <div class="col-md-4">
      <%= f.submit "Submit Review", class:"btn btn-small btn-success" %>
    </div>
    <% end %>
  
  </div>
</div>